<p id="notice"><%= notice %></p>

<h1><%= t 'goal.title' %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t 'goal.id' %></th>
      <th><%= t 'goal.start_date' %></th>
      <th><%= t 'goal.end_date' %></th>
      <th><%= t 'goal.value' %></th>
      <th><%= t 'goal.store' %></th>
      <th><%= t 'goal.month_year' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td class="td-small"><%= goal.id %></td>
        <td><%= l goal.start_date %></td>
        <td><%= l goal.end_date %></td>
        <td><%= number_to_currency goal.value %></td>
        <td><%= goal.store.name %></td>
        <td><%= format_month_year goal.month, goal.year %></td>
        <td class="td-small"><%= link_to t('show'), goal %></td>
        <td class="td-small"><%= link_to t('edit'), edit_goal_path(goal) %></td>
        <td class="td-small"><%= link_to t('destroy'), goal, method: :delete, data: { confirm: t('confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('goal.new'), new_goal_path %>
